{# templates/student/list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des étudiants{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Liste des étudiants</h1>
        <a href="{{ path('student_create') }}" class="btn btn-primary btn-sm">Ajouter un étudiant</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                    <tr>
                        <td>{{ student.id }}</td>
                        <td>{{ student.firstName }}</td>
                        <td>{{ student.lastName }}</td>
                        <td>{{ student.email }}</td>
                        <td class="text-center">
                            <a href="{{ path('student_edit', {id: student.id}) }}"
                            class="text-primary me-2" title="Modifier">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a href="{{ path('student_delete', {id: student.id}) }}"
                            class="text-danger" title="Supprimer">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">
                            Aucun étudiant trouvé.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
